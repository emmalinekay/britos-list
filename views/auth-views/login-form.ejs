<!-- This is where user logs in -->
<style>
body {
  background-image: url(./images/background.jpeg);
  background-position: center;
  background-repeat: no-repeat;
  background-size: cover;
}
</style>

<div class="container">
<h2 class="login-heading"> Log In </h2>

<% if (securityFeedback.length > 0) { %>
  <p class="error-message"> <%= securityFeedback %> </p>
<% } %>

<% if (logoutFeedback.length > 0) { %>
  <p class="success-message"> <%= logoutFeedback %> </p>
<% } %>


<form id="form" method="post" action="/process-login">

  <% if (flashError.length > 0) { %>
    <p class="error-message"> <%= flashError %> </p>
  <% } %>

  <label for="email-input"> Email </label>
  <input  id="email-input" name="loginEmail" type="email"
      placeholder="john@example.com">
  <br>

  <label for="password-input"> Password </label>
  <input  id="password-input" name="loginPassword" type="password"
      placeholder="*****">
  <br>

  <button> Log In </button>

</form>
</div>

