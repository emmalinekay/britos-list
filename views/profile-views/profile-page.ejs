<body class="profiles-body">
  <div class="profile-container">
    <img src="<%= userInfo.photoUrl %>" class="card-pic">
  		<h3 class="title-card"><%= userInfo.firstName %> <%= userInfo.lastName %></h3>

<div class="page-bullets">

  <p class="page-info"> <b>Company:</b> <%= userInfo.jobTitle %> </p>

  <p class="page-info"> <b>Company:</b> <%= userInfo.company %> </p>

  <p class="page-info"> <b> Email: </b> <%= userInfo.email %> </p>

  <p class="page-info"> <b> Phone Number:</b> <%= userInfo.phoneNumber %> </p>

  <p class="page-info"> <b> LinkedIn: </b> <a href="<%= userInfo.socialLink%>" id="linkedin"> <%= userInfo.socialLink%> </a> </p>

</div>

<div class="page-buttons">
  <div class="button1">
    <a href="/your-profile/edit" class="btn btn-outline-info profile-btn" role="button">Update</a>
  </div>
</div>

</body>

